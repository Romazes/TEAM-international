@model SimpleViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4" id="grid">
        @foreach (var e in Model.ViewProducts)
        {
            <div class="col block2 grid-item @e.Category" style="width: 15rem;">
                <div class="block2-pic hov-img0">
                    <img src="~/img/fruit/apple.jpg" alt="@e.Category">
                    <a href="#"
                       class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">View</a>
                </div>
                <div class="flex-w flex-t p-t-14">
                    <div class="block2-txt-child1 flex-col-l ">
                        <a class="stext-104 cl4 hov-cl1 trans-04 p-b-6" href="#">@e.Title - @e.Category</a>
                        <span class="stext-105 cl3">
                            @e.Amount - @e.MetricUnits
                        </span>
                    </div>
                </div>
                <div class="btn-group" style="width:100%">
                    <a asp-action="EditProduct" asp-route-id="@e.Id" class="btn btn-outline-dark btn-sm">Edit</a>
                    <a asp-action="RemoveProduct" asp-route-id="@e.Id" onclick="return sweetClick();"
                            class="btn btn-outline-danger btn-sm">Remove</a>
                </div>
            </div>
        }
    </div>
</div>

