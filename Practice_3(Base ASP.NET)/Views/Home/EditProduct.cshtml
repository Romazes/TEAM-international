@model Product
<h5>Edit existing product</h5>
<div class="col-md-7 m-auto">
    <form asp-action="EditProduct" method="post" class="mt-4 mb-4">
        @Html.HiddenFor(e => e.Id)
        <div class="form-group mt-4">
            <h6>Title</h6>
            <input asp-for="Title" class="form-control" required />
        </div>
        <div class="form-group mt-4">
            <h6>Amount</h6>
            <input asp-for="Amount" class="form-control" required />
        </div>
        <div class="form-group mt-4">
            <h6>Category</h6>
            <select asp-for="Category" class="custom-select" asp-items="ViewBag.Category"></select>
        </div>
        <button type="submit" class="btn btn-primary mt-5">
            Edit product
        </button>
    </form>
</div>